<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajithk14.memoryquiz.ButtonStatsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:autoSizeTextType="uniform"
            android:background="@color/colorAccent"
            android:onClick="onClickDataTable"
            android:text="view data table" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:autoSizeTextType="uniform"
            android:background="@color/colorPrimary"
            android:onClick="onClickGraph"
            android:text="VIEW GRAPH" />

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:autoSizeTextType="uniform"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClickStatsActivity"
            android:text="VIEW MOST MISSED" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
